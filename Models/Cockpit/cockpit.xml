<?xml version="1.0"?>
<PropertyList>
    <path>cockpit.ac</path>

    <!-- Model Subsets -->
    <model>
        <path>Aircraft/737-MAX/Models/Cockpit/Overhead/OH-Panel.xml</path>
        <offsets>
            <x-m>-0.021295</x-m>
            <y-m>-0.004122</y-m>
            <z-m>0.707994</z-m>
            <pitch-deg>61.8114</pitch-deg>
        </offsets>
    </model>

    <!-- Illuminating screens, displays and lights -->
    <animation>
        <type>material</type>
        <object-name>screen1.full</object-name>
        <object-name>screen2.full</object-name>
        <object-name>screen2.L</object-name>
        <object-name>screen2.R</object-name>
        <object-name>screen3.full</object-name>
        <object-name>screen3.L</object-name>
        <object-name>screen3.R</object-name>
        <object-name>screen4.full</object-name>
        <object-name>screen.iesi</object-name>
        <object-name>ap.course1</object-name>
        <object-name>ap.spd</object-name>
        <object-name>ap.heading</object-name>
        <object-name>ap.altitude</object-name>
        <object-name>ap.vspeed</object-name>
        <object-name>ap.course2</object-name>
        <object-name>ap.at-engage</object-name>
        <object-name>ap.n1-engage</object-name>
        <object-name>ap.speed-engage</object-name>
        <object-name>ap.lvlchg-engage</object-name>
        <object-name>ap.vnav-engage</object-name>
        <object-name>ap.hdgsel-engage</object-name>
        <object-name>ap.app-engage</object-name>
        <object-name>ap.vorloc-engage</object-name>
        <object-name>ap.lnav-engage</object-name>
        <object-name>ap.althld-engage</object-name>
        <object-name>ap.vs-engage</object-name>
        <object-name>ap.cmda-engage</object-name>
        <object-name>ap.cmdb-engage</object-name>
        <object-name>ap.cwsa-engage</object-name>
        <object-name>ap.cwsb-engage</object-name>
        <object-name>pd.commact1</object-name>
        <object-name>pd.commact2</object-name>
        <object-name>pd.navact1</object-name>
        <object-name>pd.navact2</object-name>
        <object-name>pd.adfact1</object-name>
        <object-name>pd.adfact2</object-name>
        <object-name>pd.commsty1</object-name>
        <object-name>pd.commsty2</object-name>
        <object-name>pd.navsty1</object-name>
        <object-name>pd.navsty2</object-name>
        <object-name>pd.adfsty1</object-name>
        <object-name>pd.adfsty2</object-name>
        <object-name>pd.transponder</object-name>
        <object-name>pd.trim-rudderscreen</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
        </emission>
    </animation>

    <!-- Instrument Screens -->
    <animation>
        <type>pick</type>
        <object-name>screen1.full</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>boeing737.showPFDC();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>select</type>
        <object-name>screen2.L</object-name>
        <object-name>screen2.R</object-name>
        <condition>
            <equals>
                <property>sim/fdm-initialized</property>
                <value>0</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>screen2.R</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>boeing737.showEICAS();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>screen2.full</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>boeing737.showNDWide();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>select</type>
        <object-name>screen3.full</object-name>
        <condition>
            <equals>
                <property>sim/fdm-initialized</property>
                <value>0</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>screen3.L</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>boeing737.showEICAS();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>screen4.full</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>boeing737.showPFDF();</script>
            </binding>
        </action>
    </animation>

    <!-- Yoke animations -->
    <animation>
        <type>rotate</type>
        <object-name>yoke.capt</object-name>
        <object-name>ap.discL</object-name>
        <object-name>h-trim.LL</object-name>
        <object-name>h-trim.RL</object-name>
        <object-name>yoke.FO</object-name>
        <object-name>ap.discR</object-name>
        <object-name>h-trim.LR</object-name>
        <object-name>h-trim.RR</object-name>
        <object-name>column.capt</object-name>
        <object-name>column.capt1</object-name>
        <object-name>column.capt2</object-name>
        <object-name>column.FO</object-name>
        <object-name>column.FO1</object-name>
        <object-name>column.FO2</object-name>
        <property>systems/hydraulic/elevator-manual</property>
        <factor>-7</factor>
        <offset-deg>5</offset-deg>
        <center>
            <x-m>-0.408176</x-m>
            <y-m>-0.479006</y-m>
            <z-m>-0.909735</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>yoke.capt</object-name>
        <object-name>ap.discL</object-name>
        <object-name>h-trim.LL</object-name>
        <object-name>h-trim.RL</object-name>
        <property>systems/hydraulic/aileron-manual</property>
        <factor>-60</factor>
        <center>
            <x-m>-0.355549</x-m>
            <y-m>-0.477626</y-m>
            <z-m>-0.11806</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>yoke.FO</object-name>
        <object-name>ap.discR</object-name>
        <object-name>h-trim.LR</object-name>
        <object-name>h-trim.RR</object-name>
        <property>systems/hydraulic/aileron-manual</property>
        <factor>-60</factor>
        <center>
            <x-m>-0.355549</x-m>
            <y-m>0.478548</y-m>
            <z-m>-0.118032</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <!-- Yoke Autopilot Disengage -->
    <animation>
        <type>pick</type>
        <object-name>ap.discL</object-name>
        <object-name>ap.discR</object-name>
        <action>
            <name>A/P Disengage</name>
            <repeatable>false</repeatable>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/ap1</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/ap2</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>it-cws/cwsa</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>it-cws/cwsb</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/apoff</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>controls/flight/apoff</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <!-- Autopilot Panel -->
    <animation>
        <type>knob</type>
        <object-name>ap.fd1</object-name>
        <property>it-autoflight/input/fd1</property>
        <factor>-60</factor>
        <center>
            <x-m>-0.619114</x-m>
            <y-m>-0.226423</y-m>
            <z-m>0.132913</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-toggle</command>
                <property>it-autoflight/input/fd1</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ap.at</object-name>
        <property>it-autoflight/input/athr</property>
        <factor>-60</factor>
        <center>
            <x-m>-0.619132</x-m>
            <y-m>-0.205095</y-m>
            <z-m>0.16982</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-toggle</command>
                <property>it-autoflight/input/athr</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ap.fd2</object-name>
        <property>it-autoflight/input/fd2</property>
        <factor>-60</factor>
        <center>
            <x-m>-0.61958</x-m>
            <y-m>0.230409</y-m>
            <z-m>0.132913</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-toggle</command>
                <property>it-autoflight/input/fd2</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ap.crs1</object-name>
        <property>it-autoflight/input/true-course</property>
        <factor>45</factor>
        <center>
            <x-m>-0.609835</x-m>
            <y-m>-0.250368</y-m>
            <z-m>0.152558</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/true-course</property>
                <min>0</min>
                <max>360</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ap.speed-knob</object-name>
        <property>it-autoflight/input/spd-kts</property>
        <factor>45</factor>
        <center>
            <x-m>-0.608543</x-m>
            <y-m>-0.137081</y-m>
            <z-m>0.147016</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/spd-kts</property>
                <min>0</min>
            </binding>
        </action>
        <condition>
            <equals>
                <property>it-autoflight/input/kts-mach</property>
                <value>0</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>ap.speed-knob</object-name>
        <property>it-autoflight/input/spd-mach</property>
        <factor>45</factor>
        <center>
            <x-m>-0.608543</x-m>
            <y-m>-0.137081</y-m>
            <z-m>0.147016</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/spd-mach</property>
                <step>0.001</step>
                <min>0</min>
            </binding>
        </action>
        <condition>
            <equals>
                <property>it-autoflight/input/kts-mach</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ap.bank</object-name>
        <property>it-autoflight/input/bank-limit-sw</property>
        <interpolation>
            <entry>
                <ind>6</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>2</ind>
                <dep>-140</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-0.605266</x-m>
            <y-m>-0.056959</y-m>
            <z-m>0.154557</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/bank-limit-sw</property>
                <min>2</min>
                <max>7</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ap.hdg-knob</object-name>
        <property>it-autoflight/input/hdg</property>
        <factor>-45</factor>
        <center>
            <x-m>-0.605266</x-m>
            <y-m>-0.056959</y-m>
            <z-m>0.154557</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/hdg</property>
                <min>0</min>
                <max>360</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ap.alt-knob</object-name>
        <property>it-autoflight/input/alt</property>
        <factor>-45</factor>
        <center>
            <x-m>-0.609835</x-m>
            <y-m>0.036557</y-m>
            <z-m>0.155627</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/alt</property>
                <step>100</step>
                <min>0</min>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ap.vs-knob</object-name>
        <property>it-autoflight/input/vs</property>
        <factor>-45</factor>
        <center>
            <x-m>-0.62752</x-m>
            <y-m>0.13274</y-m>
            <z-m>0.1437</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/vs</property>
                <step>100</step>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ap.crs2</object-name>
        <property>it-autoflight/input/true-course</property>
        <factor>45</factor>
        <center>
            <x-m>-0.609835</x-m>
            <y-m>0.254292</y-m>
            <z-m>0.152558</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/true-course</property>
                <min>0</min>
                <max>360</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ap.at-engage</object-name>
        <condition>
            <equals>
                <property>it-autoflight/output/athr</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ap.n1-engage</object-name>
        <condition>
            <equals>
                <property>it-autoflight/input/athr</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>
</PropertyList>