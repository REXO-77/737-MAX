<?xml version="1.0"?>
<PropertyList>
    <path>AP-OH/AP-Panel.ac</path>
    <!-- Annunciator -->
    <!-- Illuminate all by default -->
    <animation>
        <type>material</type>
        <object-name>annunciator.air-cond</object-name>
        <object-name>annunciator.anti-ice</object-name>
        <object-name>annunciator.apu</object-name>
        <object-name>annunciator.doors</object-name>
        <object-name>annunciator.elec</object-name>
        <object-name>annunciator.eng</object-name>
        <object-name>annunciator.flt-cont</object-name>
        <object-name>annunciator.fuel</object-name>
        <object-name>annunciator.hyd</object-name>
        <object-name>annunciator.irs</object-name>
        <object-name>annunciator.overhead</object-name>
        <object-name>annunciator.ovht-det</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
        </emission>
    </animation>

    <!-- Switches -->
    <!-- Autothrottle -->
    <animation>
        <type>pick</type>
        <object-name>at.switch</object-name>
        <visible>1</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>nasal</command>
                <script>
				if (getprop("it-autoflight/custom/athr-armed") == 0) {
					setprop("it-autoflight/custom/athr-armed", 1);
				} else if (getprop("it-autoflight/custom/athr-armed") == 1) {
					setprop("it-autoflight/custom/athr-armed", 0);
					setprop("it-autoflight/input/athr", 0);
				}
				</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>at.switch</object-name>
        <property>it-autoflight/custom/athr-armed</property>
        <factor>-58</factor>
        <center>
            <x-m>-0.041363</x-m>
            <y-m>-0.2039</y-m>
            <z-m>0.023293</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    <animation>
        <type>select</type>
        <object-name>at.engage</object-name>
        <condition>
            <equals>
                <property>it-autoflight/custom/athr-armed</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>

    <!-- Flight Director: Captain -->
    <animation>
        <type>pick</type>
        <object-name>fd.capt</object-name>
        <visible>1</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>nasal</command>
                <script>
				if (getprop("it-autoflight/input/fd1") == 0) {
					setprop("it-autoflight/input/fd1", 1);
				} else if (getprop("it-autoflight/input/fd1") == 1) {
					setprop("it-autoflight/input/fd1", 0);
				}
				</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>fd.capt</object-name>
        <property>it-autoflight/input/fd1</property>
        <factor>-58</factor>
        <center>
            <x-m>-0.041363</x-m>
            <y-m>-0.225064</y-m>
            <z-m>-0.012656</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <!-- Flight Director: First Officer -->
    <animation>
        <type>pick</type>
        <object-name>fd.fo</object-name>
        <visible>1</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>nasal</command>
                <script>
				if (getprop("it-autoflight/input/fd2") == 0) {
					setprop("it-autoflight/input/fd2", 1);
				} else if (getprop("it-autoflight/input/fd2") == 1) {
					setprop("it-autoflight/input/fd2", 0);
				}
				</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>fd.fo</object-name>
        <property>it-autoflight/input/fd2</property>
        <factor>-58</factor>
        <center>
            <x-m>-0.041363</x-m>
            <y-m>0.228283</y-m>
            <z-m>-0.012656</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>


    <!-- Knobs -->
    <!-- Autoppilot Course -->
    <animation>
        <type>knob</type>
        <object-name>course.capt</object-name>
        <property>instrumentation/nav[0]/radials/selected-deg</property>
        <factor>-0.5</factor>
        <center>
            <x-m>-0.044438</x-m>
            <y-m>-0.24883</y-m>
            <z-m>0.00602</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/nav[0]/radials/selected-deg</property>
                <min>0</min>
                <max>360</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>course.fo</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <factor>-0.5</factor>
        <center>
            <x-m>-0.044438</x-m>
            <y-m>0.25197</y-m>
            <z-m>0.00602</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/nav[1]/radials/selected-deg</property>
                <min>0</min>
                <max>360</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <!-- Autothrottle -->
    <animation>
        <type>knob</type>
        <object-name>at.knob</object-name>
        <property>it-autoflight/input/spd-kts</property>
        <center>
            <x-m>-0.042206</x-m>
            <y-m>-0.13641</y-m>
            <z-m>0.00052</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/spd-kts</property>
                <min>0</min>
            </binding>
        </action>
    </animation>

    <!-- Heading and Bank Limit -->
    <animation>
        <type>rotate</type>
        <object-name>hdg.bankknob</object-name>
        <property>it-autoflight/input/bank-limit-sw</property>
        <interpolation>
            <entry>
                <ind>2</ind>
                <dep>-140</dep>
            </entry>
            <entry>
                <ind>6</ind>
                <dep>0</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-0.0276</x-m>
            <y-m>-0.056899</y-m>
            <z-m>0.008005</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>hdg.knob</object-name>
        <property>it-autoflight/input/hdg</property>
        <center>
            <x-m>-0.033178</x-m>
            <y-m>-0.0569</y-m>
            <z-m>0.008003</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/hdg</property>
                <min>0</min>
                <max>359</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <!-- Altitude -->
    <animation>
        <type>knob</type>
        <object-name>alt.knob</object-name>
        <property>it-autoflight/input/alt</property>
        <center>
            <x-m>-0.044438</x-m>
            <y-m>0.0359</y-m>
            <z-m>0.009065</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/alt</property>
                <min>0</min>
            </binding>
        </action>
    </animation>

    <!-- Vertical Speed -->
    <animation>
        <type>knob</type>
        <object-name>vs.knob</object-name>
        <property>it-autoflight/input/vs</property>
        <center>
            <x-m>-0.04968</x-m>
            <y-m>0.13135</y-m>
            <z-m>-0.002769</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/vs</property>
                <factor>100</factor>
            </binding>
        </action>
    </animation>


    <!-- Buttons -->
    <!-- N1 -->
    <animation>
        <type>pick</type>
        <object-name>N1</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>itaf.buttonN1();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>select</type>
        <object-name>N1.engage</object-name>
        <condition>
            <equals>
                <property>it-autoflight/input/vert</property>
                <value>10</value>
            </equals>
        </condition>
    </animation>

    <!-- Speed -->
    <animation>
        <type>pick</type>
        <object-name>speed</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>itaf.buttonSPD();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>select</type>
        <object-name>speed.engage</object-name>
        <condition>
            <equals>
                <property>it-autoflight/input/vert</property>
                <value>9</value>
            </equals>
        </condition>
    </animation>

    <!-- Level Change -->
    <animation>
        <type>pick</type>
        <object-name>lvlchg.sel</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>itaf.buttonLVLCH();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>select</type>
        <object-name>lvlchg.engage</object-name>
        <condition>
            <equals>
                <property>it-autoflight/input/vert</property>
                <value>4</value>
            </equals>
        </condition>
    </animation>

    <!-- Heading select -->
    <animation>
        <type>pick</type>
        <object-name>hdg.sel</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>itaf.buttonHDG();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>select</type>
        <object-name>hdg.engage</object-name>
        <condition>
            <equals>
                <property>it-autoflight/input/lat</property>
                <value>9</value>
            </equals>
        </condition>
    </animation>

