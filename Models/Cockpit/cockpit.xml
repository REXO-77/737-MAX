<?xml version="1.0"?>
<PropertyList>
    <path>cockpit.ac</path>

    <!-- Model Subsets -->
    <model>
        <path>Aircraft/737-MAX/Models/Cockpit/pedestal.xml</path>
        <offsets>
            <x-m>-0.334</x-m>
            <y-m>0.025948</y-m>
            <z-m>-1.0271</z-m>
        </offsets>
    </model>
    <model>
        <path>Aircraft/737-MAX/Models/Cockpit/AP-Panel.xml</path>
        <offsets>
            <x-m>-0.467051</x-m>
            <y-m>0.000006</y-m>
            <z-m>0.139449</z-m>
        </offsets>
    </model>
    <model>
        <path>Aircraft/737-MAX/Models/Cockpit/OH-Panel.xml</path>
        <offsets>
            <x-m>-0.021295</x-m>
            <y-m>-0.004122</y-m>
            <z-m>0.707994</z-m>
            <pitch-deg>61.8114</pitch-deg>
        </offsets>
    </model>

    <!-- Instruments -->
    <model>
        <path>Aircraft/737-MAX/Models/Instruments/PFD1.xml</path>
        <offsets>
            <x-m>-0.626476</x-m>
            <y-m>-0.476571</y-m>
            <z-m>-0.127213</z-m>
        </offsets>
    </model>
    <model>
        <path>Aircraft/737-MAX/Models/Instruments/PFD2.xml</path>
        <offsets>
            <x-m>-0.626476</x-m>
            <y-m>0.476571</y-m>
            <z-m>-0.127213</z-m>
        </offsets>
    </model>

    <!-- Yoke animations -->
    <animation>
        <type>rotate</type>
        <object-name>yoke.capt</object-name>
        <object-name>ap.discL</object-name>
        <object-name>h-trim.LL</object-name>
        <object-name>h-trim.RL</object-name>
        <object-name>yoke.FO</object-name>
        <object-name>ap.discR</object-name>
        <object-name>h-trim.LR</object-name>
        <object-name>h-trim.RR</object-name>
        <object-name>column.capt</object-name>
        <object-name>column.capt1</object-name>
        <object-name>column.capt2</object-name>
        <object-name>column.FO</object-name>
        <object-name>column.FO1</object-name>
        <object-name>column.FO2</object-name>
        <property>systems/hydraulic/elevator-manual</property>
        <factor>-7</factor>
        <offset-deg>5</offset-deg>
        <center>
            <x-m>-0.408176</x-m>
            <y-m>-0.479006</y-m>
            <z-m>-0.909735</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>yoke.capt</object-name>
        <object-name>ap.discL</object-name>
        <object-name>h-trim.LL</object-name>
        <object-name>h-trim.RL</object-name>
        <property>systems/hydraulic/aileron-manual</property>
        <factor>-60</factor>
        <center>
            <x-m>-0.355549</x-m>
            <y-m>-0.477626</y-m>
            <z-m>-0.11806</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>yoke.FO</object-name>
        <object-name>ap.discR</object-name>
        <object-name>h-trim.LR</object-name>
        <object-name>h-trim.RR</object-name>
        <property>systems/hydraulic/aileron-manual</property>
        <factor>-60</factor>
        <center>
            <x-m>-0.355549</x-m>
            <y-m>0.478548</y-m>
            <z-m>-0.118032</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <!-- Autopilot Disengage -->
    <animation>
        <type>pick</type>
        <object-name>ap.discL</object-name>
        <object-name>ap.discR</object-name>
        <action>
            <name>A/P Disengage</name>
            <repeatable>false</repeatable>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/ap1</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/ap2</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>it-cws/cwsa</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>it-cws/cwsb</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/apoff</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>controls/flight/apoff</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
</PropertyList>