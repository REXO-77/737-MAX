<?xml version="1.0"?>
<PropertyList>
    <path>Pedestal/pedestal.ac</path>
    <!-- CDU -->
    <model>
        <path>Aircraft/737-MAX/Models/Cockpit/Pedestal/CDU.xml</path>
        <offsets>
            <x-m>-0.192361</x-m>
            <y-m>-0.20549</y-m>
            <z-m>0.593644</z-m>
            <pitch-deg>-67.6508</pitch-deg>
        </offsets>
    </model>
    <model>
        <path>Aircraft/737-MAX/Models/Cockpit/Pedestal/CDU.xml</path>
        <offsets>
            <x-m>-0.192361</x-m>
            <y-m>0.153926</y-m>
            <z-m>0.593644</z-m>
            <pitch-deg>-67.6508</pitch-deg>
        </offsets>
    </model>
    
    <!-- Flap handle -->
    <animation>
        <type>rotate</type>
        <object-name>flaps</object-name>
        <property>surface-positions/flap-pos-norm</property>
        <factor>89</factor>
        <center>
            <x-m>0.040164</x-m>
            <y-m>-0.141565</y-m>
            <z-m>0.549219</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <!-- Speedbrake -->
    <animation>
        <type>rotate</type>
        <object-name>speedbrake</object-name>
        <property>controls/flight/speedbrake-norm</property>
        <factor>88</factor>
        <center>
            <x-m>0.040164</x-m>
            <y-m>-0.141565</y-m>
            <z-m>0.549219</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    <!-- Throttle: N1 -->
    <animation>
        <type>rotate</type>
        <object-name>n1</object-name>
        <object-name>n1.rev</object-name>
        <object-name>at.discL</object-name>
        <property>controls/engines/engine[0]/throttle</property>
        <factor>-90</factor>
        <center>
            <x-m>0.040164</x-m>
            <y-m>-0.141565</y-m>
            <z-m>0.549219</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <!-- Throttle: N2 -->
    <animation>
        <type>rotate</type>
        <object-name>n2</object-name>
        <object-name>n2.rev</object-name>
        <object-name>at.discR</object-name>
        <property>controls/engines/engine[1]/throttle</property>
        <factor>-90</factor>
        <center>
            <x-m>0.040164</x-m>
            <y-m>-0.141565</y-m>
            <z-m>0.549219</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <!-- N1 Cutoff -->
    <animation>
        <type>knob</type>
        <object-name>n1.startlever</object-name>
        <object-name>n1.startknob</object-name>
        <object-name>n1.startfail</object-name>
        <property>controls/engines/engine[0]/cutoff</property>
        <factor>40</factor>
        <center>
            <x-m>0.146817</x-m>
            <y-m>-0.049112</y-m>
            <z-m>0.593638</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-toggle</command>
                <property>controls/engines/engine[0]/cutoff</property>
            </binding>
        </action>
    </animation>

    <!-- N2 Cutoff -->
    <animation>
        <type>knob</type>
        <object-name>n2.startlever</object-name>
        <object-name>n2.startknob</object-name>
        <object-name>n2.startfail</object-name>
        <property>controls/engines/engine[1]/cutoff</property>
        <factor>40</factor>
        <center>
            <x-m>0.146817</x-m>
            <y-m>-0.01216</y-m>
            <z-m>0.593638</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-toggle</command>
                <property>controls/engines/engine[1]/cutoff</property>
            </binding>
        </action>
    </animation>

    <!-- N1 Fire -->
    <animation>
        <type>select</type>
        <object-name>n1.startfail</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>controls/fires/fire[0]/on-fire</property>
                    <value>0</value>
                </greater-than>
                <not>
                    <property>controls/fires/fire[0]/extinguish-handle-armed</property>
                </not>
            </and>
        </condition>
    </animation>

    <!-- N2 Fire -->
    <animation>
        <type>select</type>
        <object-name>n2.startfail</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>controls/fires/fire[1]/on-fire</property>
                    <value>0</value>
                </greater-than>
                <not>
                    <property>controls/fires/fire[1]/extinguish-handle-armed</property>
                </not>
            </and>
        </condition>
    </animation>

    <!-- Illuminate switch by default -->
    <animation>
        <type>material</type>
        <object-name>n1.startfail</object-name>
        <object-name>n2.startfail</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
        </emission>
    </animation>

    <!-- Rudder pedals -->
    <animation>
        <type>translate</type>
        <object-name>rudder.pedalLL</object-name>
        <object-name>rudder.pedalRL</object-name>
        <property>controls/flight/rudder</property>
        <factor>0.05</factor>
        <axis>
            <x>1</x>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>rudder.pedalLR</object-name>
        <object-name>rudder.pedalRR</object-name>
        <property>controls/flight/rudder</property>
        <factor>-0.05</factor>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <!-- Trim: Horizontal Stabilizer -->
    <animation>
        <type>rotate</type>
        <object-name>trim.hstab</object-name>
        <property>controls/flight/elevator-trim</property>
        <factor>-10500</factor>
        <center>
            <x-m>0.02971</x-m>
            <y-m>-0.02676</y-m>
            <z-m>0.55156</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>trim.hstabm</object-name>
        <property>controls/flight/elevator-trim</property>
        <interpolation>
            <entry>
                <ind>-1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>-14.5</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-40.5</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0.040164</x-m>
            <y-m>-0.02676</y-m>
            <z-m>0.549219</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>
</PropertyList>